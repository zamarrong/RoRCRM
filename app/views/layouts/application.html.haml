!!!
%html
  %head
    %title Frimar
    
    = javascript_include_tag 'https://www.google.com/jsapi', 'data-turbolinks-track' => true
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags

  %body{class: ["#{controller_name} #{action_name}"]}

    .wrapper
      = render 'layouts/navbar'

      - if notice
        %p.alert.alert-notice
          = notice
      - if alert
        %p.alert.bg-danger
          = alert
          
      %div#main
        = yield
      
      

      .loading-modal.modal
        .modal-dialog
          .modal-content
            .spinner