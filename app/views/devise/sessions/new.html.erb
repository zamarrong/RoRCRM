<div class="narrow-wrapper">
	<h2>Iniciar sesión</h2>

	<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
	  <div><%= f.label :email %><br />
	  <%= f.email_field :email, :autofocus => true, :class => "form-control" %></div>
	  <div><%= f.label 'Contraseña' %><br />
	  <%= f.password_field :password, :class => "form-control" %></div>

	  <% if devise_mapping.rememberable? -%>
	    <div><%= f.check_box :remember_me %> <%= f.label 'Recordarme' %></div>
	  <% end -%>

	  <br />

	  <div><%= f.submit "Iniciar sesión", :class => ['btn', 'btn-lg', 'btn-primary', 'btn-block'] %></div>
	<% end %>
	<br />
	<%= render "devise/shared/links" %>
</div>
