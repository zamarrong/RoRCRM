.col-md-9
	%h2 Oportunidades
.col-md-3
	%br
	= form_tag opportunities_path, :method => :get do
		.input-group
			= text_field_tag :search, params[:search], class: 'form-control'
			%span.search-addon.input-group-addon
				= button_tag type: 'submit' do
					%i.glyphicon.glyphicon-search

.clear

= render partial: "list"